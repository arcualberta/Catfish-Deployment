{
  "AllowedHosts": "*",
  "CorsAllowedHosts": {
    "General": "*", //or "https://example-1.com; https://example-2.com; etc."
    "Restricted": "*" //or "https://example-1.com; https://example-2.com; etc"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "Path": "error.log",
      "Append": true,
      "MinLevel": "Warning", // min level for the file logger
      "FileSizeLimitBytes": 0, // use to activate rolling file behaviour
      "MaxRollingFiles": 0 // use to specify max number of log files
    }
  },
  "JwtConfig": {
    "RsaPrivateKey": "*****************************************",
    "RsaPublicKey": "*****************************************",
    "Issuer": "https://catfish.artsrn.ualberta.ca/auth",
    "Audience": "https://catfish.artsrn.ualberta.ca",
    "TokenExpiryDurationInMinutes": 52704000 //100 years 
  },

  "SolarConfiguration": {
    "solrCore": "http://localhost:8983/solr/arc-solr",
    "NumIndexingPayloadUploadFolders": null,
    "IndexingPayloadUploadRoot": null,
    "SolrDocUploadApi": null,
    "IndexFieldNames": false,
    "IndexItemsOnSave": true,
    "IndexBatchSize": 1000
  },
  "TenancyConfig": {
    "Name": "ArcSolrTest"
  },
  "AppConfig": {
    "UseSwagger": true
  }
}